<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

        <TextView
            android:id="@+id/dummyTextView"
            fontPath="fonts/AkkRg_Pro_1.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/updateValueButton"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="CHANGE"
            android:textAlignment="center"
            android:textSize="15sp"
            tools:ignore="MissingPrefix"
            android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/updateValueButton"
        fontPath="fonts/FF_DIN_Pro_Bold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="updateVals"
        android:text="UPDATE NOW"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/trackButton"
        fontPath="fonts/FF_DIN_Pro_Bold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateValueButton"
        android:layout_centerHorizontal="true"
        android:onClick="trackMap"
        android:text="TRACK DISTRIBUTORS"
        tools:ignore="MissingPrefix" />
</RelativeLayout>
